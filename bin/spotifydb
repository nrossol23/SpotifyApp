#!/bin/bash
# spotifydb

# Stop on errors:
set -Eeuo pipefail

# Describe the command line options:
usage() {
    echo "Usage: $0 (create|destroy|reset|dump)"
}

# No argument provided:
if [ $# -ne 1 ]; then
    usage
    exit 1
fi

# Parse argument. $1 is the first argument
case $1 in
    "create")
        if [ ! -f var/spotifyapp.sqlite3 ]; then
            mkdir -p var/uploads
            sqlite3 var/spotifyapp.sqlite3 < sql/schema.sql
            sqlite3 var/spotifyapp.sqlite3 < sql/data.sql
            cp sql/uploads/* var/uploads/
        fi
        ;;
    "destroy")
        rm -rf var/spotifyapp.sqlite3 var/uploads
        ;;
    "reset")
        rm -rf var/spotifyapp.sqlite3 var/uploads
        mkdir -p var/uploads
        sqlite3 var/spotifyapp.sqlite3 < sql/schema.sql
        sqlite3 var/spotifyapp.sqlite3 < sql/data.sql
        cp sql/uploads/* var/uploads/
        ;;
    "dump")
        sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM comments'
        sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM following'
        sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM likes'
        sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM posts'
        sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM users'
        ;;  
    *)
        usage
        exit 1
        ;;
esac